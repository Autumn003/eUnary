{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "contentlayer/generated": ["./.contentlayer/generated"]
        },
        // "types": ["contentlayer/generated"], // Add this line
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts",
        ".contentlayer/generated"
    ],
    "exclude": ["node_modules"]
}
