{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts",
         "docs/theme-toggler.mdx"
    ],
    "exclude": ["node_modules"]
}
